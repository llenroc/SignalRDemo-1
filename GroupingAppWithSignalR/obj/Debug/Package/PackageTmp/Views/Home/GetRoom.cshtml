@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>小黑屋</title>
    <link href="~/Content/jquery.mobile-1.4.5.min.css" rel="stylesheet" />
    <style>
        .room-users .ui-listview,.group-1,.group-2{padding:0.1rem 0 0 8%;}
        .room-users .ui-listview li,.group-1 li,.group-2 li{display:inline-block;padding:0.3rem;width:15%}
        #discussion{list-style:none;padding-left:0.3rem;height:65%;overflow-y:scroll}
        .chat-container{position:absolute;width:100%;bottom:0;height:30%;border-top:1px solid #bbb;}
        .chat-container .action-area{bottom:0;position:absolute;width:100%;height:31%;}
        .battle-vs{background:url(/Images/vs.png)no-repeat;background-position:center;width:100%;height:1.2rem;background-size:contain; opacity:0;transition:all ease-in-out 1s;}
    </style>
</head>
<body>
    <div class="room-users"> 
        <div data-role="header">
            <h1 id="roomNameContainer"></h1>
        </div>
        <ul data-role="listview">
            
        </ul>
        <hr />
    </div>
    <div class="battle-group-container">
        <div class="group-1">
            <ul></ul>
        </div>
        <div class="battle-vs">
        </div>
        <div class="group-2">
            <ul></ul>
        </div>
    </div>
    <div class="chat-container">
        <ul id="discussion"></ul>
        <div class="action-area">
            <input type="text" id="message" />
            <div class="ui-grid-a">
                <div class="ui-block-a">
                    <select id="channel-select" name="channel-select" data-shadow="false">
                        <option value="1">房间</option>
                        <option value="2">综合</option>
                    </select>
                </div>
                <div class="ui-block-b">
                    <input type="button" id="sendmessage" value="发送">
                </div>
                
            </div>
            <input type="hidden" id="displayname" />
            
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.mobile-1.4.5.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/sha1.js"></script>
    <script src="~/Scripts/GroupMapping/getRoom.js?rand=327189"></script>
</body>
</html>
